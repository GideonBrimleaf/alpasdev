<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link rel="icon" href="/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> {{ title }} - {{ env('APP_NAME') }} - The Rapid and Delightful Kotlin Web Framework</title>

    {% include '_header_meta.peb' %}

    <link rel="stylesheet" href="{{ mix('css/docs.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.css"/>

    <script src="/js/breakpoints.min.js" defer></script>
    <script src="/js/browser.min.js" defer></script>
    <script src="{{ mix('js/app.js') }}" defer></script>
    <script src="{{ mix('js/docs.js') }}" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.4/clipboard.min.js"></script>
    {% include '_ga.peb' %}
</head>

<body class="antialiased bg-gray-200 h-full text-lg text-gray-800 is-preload">

<div id="wrapper">
    <div id="sidebar" class="bg-gray-100 pb-20 pt-5">
        <div class="inner fixed h-screen flex flex-col">
            <div>
                <div class="flex justify-center mt-5 xl:mt-10">
                    <a href="/" class="text-4xl font-medium flex text-gray-700">
                    {% include '_alpas.peb' with {"width": "122px"} %}
                    </a>
                    <div class="italic ml-2">
                        [alpha]
                    </div>
                </div>
                <div class="flex justify-center mt-8">
                {% include '_social.peb' %}
                </div>
            </div>
            <nav id="menu" class="outline-none docs_toc flex py-5 flex-col h-screen overflow-y-auto" tabindex="0">
                <div class="overflow-auto leading-relaxed pl-5 ml-5 mt-10 xl:pl-32">
                {% macro li(title, page, link) %}
                {% set link = link is empty ? title.toLowerCase() : link %}
                    <li class="py-1 {{ page ==  link ? 'block -py-2 -ml-4 pl-3 border-l-4 border-gray-500 bg-gray-200' : '' }}">
                        <a class="{{ page ==  link ? 'text-red-600' : 'text-black' }}" href="/docs/{{ link }}">{{ title }}</a>
                    </li>
                {% endmacro %}
                    <ul>
                        <li>
                            <h4 id="getting-started">Getting Started</h4>
                            <ul>
                            {{ li('Installation', page) }}
                                {{ li('Configuration', page) }}
                                {{ li('Project Structure', page, 'project-structure') }}
                            </ul>
                        </li>
                        <li>
                            <h4 id="concepts">Concepts</h4>
                            <ul>
                            {{ li('Request â‡„ Response', page, 'request-response') }}
                                {{ li('IoC Container', page, 'ioc-container') }}
                                {{ li('Service Providers', page, 'service-providers') }}
                            </ul>
                        </li>
                        <li>
                            <h4 id="basics">Basics</h4>
                            <ul>
                            {{ li('Routing', page) }}
                                {{ li('Middleware', page) }}
                                {{ li('Controllers', page) }}
                                {{ li('Request', page, 'http-request') }}
                                {{ li('Response', page, 'http-response') }}
                                {{ li('Sessions', page) }}
                                {{ li('Validation', page) }}
                                {{ li('Error Handling', page, 'error-handling') }}
                                {{ li('Logging', page) }}
                            </ul>
                        </li>
                        <li>
                            <h4 id="frontend">Frontend</h4>
                            <ul>
                            {{ li('Pebble Templates', page, 'pebble-templates') }}
                                {{ li('Mixing Assets', page, 'mixing-assets') }}
                            </ul>
                        </li>
                        <li>
                            <h4 id="security">Security</h4>
                            <ul>
                            {{ li('Introduction', page, 'security') }}
                            {{ li('Authentication', page) }}
                            {{ li('Auth Scaffolding', page, 'authentication-scaffolding') }}
                            {{ li('Password Reset', page, 'password-reset') }}
                            {{ li('Email Verification', page, 'email-verification') }}
                            </ul>
                        </li>
                        <li>
                            <h4 id="database">Database</h4>
                            <ul>
                            {{ li('Getting Started', page, 'database-getting-started') }}
                            {{ li('Ozone', page) }}
                            {{ li('Migrations', page) }}
                            {{ li('Redis', page) }}
                            </ul>
                        </li>
                        <li>
                            <h4 id="advanced">Advanced</h4>
                            <ul>
                            {{ li('Alpas Console', page, 'alpas-console') }}
                            {{ li('Mail', page) }}
                            {{ li('Notifications', page) }}
                            {{ li('Queues', page) }}
                            </ul>
                        </li>

                        {{ li('Troubleshooting', page) }}
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div id="main">
        <div class="inner flex justify-center flex-col">
            <div class="pl-16 md:max-w-4xl w-full xl:max-w-5xl mt-8">
                <div class="relative">
                    <input id="algolia"
                           class="transition bg-gray-200 mt-4 focus:outline-none placeholder-gray-600 py-2
                           pr-4 pl-10 block w-full appearance-none leading-normal border-b border-gray-400
                           focus:border-gray-800"
                           type="text"
                           placeholder="Search the docs"
                           autocomplete="off"
                           spellcheck="false"
                           role="combobox"
                           aria-autocomplete="list"
                           aria-expanded="false"
                           aria-label="search input"
                           aria-owns="algolia-autocomplete-listbox-0"
                           dir="auto"
                           style="position: relative; vertical-align: top;">

                    <div class="pointer-events-none absolute inset-y-0 left-0 pl-4 flex items-center pt-3">
                        <svg class="fill-current pointer-events-none text-gray-800 w-4 h-4"
                             xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"></path>
                        </svg>
                    </div>
                </div>
            </div>
            <div class="md:pr-10 pl-16 pr-5 leading-relaxed docs_content md:max-w-4xl w-full xl:max-w-5xl">
                <h1 class="text-3xl my-16 text-gray-700 uppercase font-mediumggj">{{ title }}</h1>
                {{ content | raw }}
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    new ClipboardJS('.clipboard');
</script>

{% include '_algolia_footer.peb' %}

</body>
</html>
