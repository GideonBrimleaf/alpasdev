<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link rel="icon" href="/favicon.svg">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> {{ env('APP_NAME') }} - {{ block('title') }}</title>

    {% include '_header_meta.peb' %}

    <link rel="stylesheet" href="{{ mix('css/app.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700&display=swap" rel="stylesheet">
    <script src="{{ mix('js/app.js') }}" defer></script>


    {% include '_ga.peb' %}
</head>

<body class="antialiased h-full">

<div class="container-fluid fixed w-full flex justify-center">
{% if hasFlash('success') %}
    <div class="w-1/3 text-white bg-green-500 py-2 px-10 text-center" id="flash">
    {{ flash('success') }}
    </div>
{% endif %}
</div>

<div>
    {% block content %} {% endblock %}
</div>
{% include '_algolia_footer.peb' %}

</body>
</html>
