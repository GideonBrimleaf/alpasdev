<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link rel="icon" href="/favicon.svg">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="{{ mix('css/app.css') }}">
    <title> {{ env('APP_NAME') }} - {{ block('title') }}</title>
    {#    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,600,700&display=swap" rel="stylesheet">#}
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap"
          rel="stylesheet">

    <style>
        #menu-toggle:checked + #menu {
            display: block;
        }
    </style>
    <script src="{{ mix('js/app.js') }}" defer></script>
</head>

<body class="antialiased bg-gray-200 h-full text-lg text-gray-800">

<div id="app">
    <main>
    {% if hasFlash('success') %}
        <div class="max-w-4xl mt-10 mx-auto w-full">
            <div class="bg-green-100 text-green-900 mb-2 p-4 text-lg">{{ flash('success') }}</div>
        </div>
    {% endif %}
    {% block content %} {% endblock %}
    </main>
</div>
</body>
</html>
